@model IEnumerable<Vidly.Models.Customer>

@{
    ViewBag.Title = "Customers list";
}

<h2>Customers list</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>


    <table class="table" id="tb_customers">
        <thead>
        </thead>
        <tbody>
        </tbody>
    </table>


@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#tb_customers").DataTable({
                ajax: {
                    url: "/api/customers",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        title: "Customer name",
                        render: function (data, type, customer) {
                            return "<a href='/customers/edit/" + customer.id + "'>" + customer.name + "</a>"; 
                        }
                    },
                    //{
                    //    data: "id",
                    //    title: "Id"
                    //},
                    {
                        data: "birthDate",
                        title: "Birth"
                    },
                    {
                        data: "membershipType.name",
                        title: "Membership Type"
                    },
                    {
                        data: "id",
                        title: "Action",
                        render: function (data) {
                            return "<button class='btn-link js-delete' data-customer-id=" + data + ">Delete</button>";
                        }
                    },
                    {
                        data: "id",
                        title: "CRUD",
                        render: function (data) {
                            return "<a class='btn-link js-edit' href='/customers/edit/" + data + "'>Edit</a>"
                        }
                    }
                ]
            });

            $("#tb_customers").on("click", ".js-delete", function () {
                var button = $(this);

                bootbox.confirm("Tem certeza que vai excluir o item ", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/customers/" + button.attr("data-customer-id"),
                            method: "DELETE",
                            success: function () {
                                console.log("deleted: " + button.attr("data-customer-id"));
                                table.row(button.parents("tr")).remove();
                            }
                        });
                    }
                });
            })
        });
    </script>
}
