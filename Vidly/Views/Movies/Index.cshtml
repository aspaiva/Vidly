<table id="tbMovies" title="Datatables rules">
    <thead></thead>
    <tbody></tbody>
</table>

@section scripts {
    <script>
        $(document).ready(function () {
            var dt = $("#tbMovies").DataTable({
                pageLength: 2,
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns: [
                    { data: "id", title: "Código" },
                    { data: "name", title: "Título" },
                    { data: "release", title: "Estreia" },
                    { data: "added", title: "Inclusão" },
                    { data: "stock", title: "Quant." },
                    {
                        data: "id", title: "Ação",
                        render: function (data, type, row) {
                            return "<a class='btn btn-link' href='/movies/edit/" + data + "'>Alterar</a>";
                        }
                    },
                    {
                        data: "id", title: "",
                        render: function (data) {
                            return "<a class='btn btn-info' href='/movies/details/" + data + "'>Info</a>";
                        }
                    },
                    {
                        data: "id", title: "",
                        render: function (data) {
                            return "<a class='btn btn-danger js-del' href='/movies/delete/" + data + "' data-movie-id='" + data + "'>Excluir</a>"
                        }
                    }
                ]
            });

            $("#tbMovies").on("click", ".js-del", function (ev) {
                var anchor = $(this);
                ev.preventDefault();

                bootbox.confirm("Excluir?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/movies/" + anchor.attr("data-movie-id"),
                            type: "DELETE",
                            success: function (parm) {
                                bootbox.alert("Excluído");
                                dt.row(anchor.parents("tr")).remove();
                                dt.draw();
                            }
                        });
                    }
                });
            });
        });
    </script>
}